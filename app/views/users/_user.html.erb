<tr>
<td><a href="<%= user_path(user) %>"><%= "#{user.first_name} #{user.last_name}" %></a></td>
<td><%= user.username.blank? ? "NOT SET" : user.username %></td>
<% shift_types.each do |n| %>
  <td><%= format("%7.2f", user.total_hours(n)) %></td>
<% end %>
<td id="p<%= user.id %>">
<%= render 'users/primary', :user => user %>
</td>
<td id="d<%= user.id %>">
<%= render 'users/suspended', :user => user %>
</td>
<td>
<%= render 'users/admin', :user => user %>
</td>
<td>
<%= link_to "Delete", user_path(user), :method => :delete ,:confirm => "Are you SURE you want to delete #{user.name}?" %>
</td>
</tr>
