<div class='well'>
<div class='page-header'><h1><%= @shift.name %></h1></div>
<p>Location: <%= @shift.location %></p>
<p>Start: <%= @shift.start.strftime("%A %B %d, %H:%M") %></p>
<p>End: <%= @shift.finish.strftime("%A %B %d, %H:%M") %></p>
<p>Shift Type: <%= @shift.shift_type.name %></p>
<p>AED:
  <% if @shift.aed %>
  Bring the AED
  <% else %>
  Do not bring the AED
  <% end %>
</p>
<p>Vest:
  <% if @shift.vest %>
  Wear a vest
  <% else %>
  Do not wear a vest
  <% end %>
</p>
<% if @shift.note.present? %>
  <p>Note: <%= @shift.note %></p>
<% end %>
<% if @shift.description.present? %>
  <p><b>Description</b> <br /><%= simple_format(@shift.description) %></p>
<% end %>
</div>
